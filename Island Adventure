import tkinter as tk
from tkinter import messagebox

# Ø¯Ø§Ù„Ø© Ù„Ø¥Ø¹Ø§Ø¯Ø© Ø§Ù„Ù„Ø¹Ø¨Ø©
def restart_game():
    global current_frame
    if current_frame:
        current_frame.destroy()
    start_game()

# Ø¯Ø§Ù„Ø© Ù„Ø¨Ø¯Ø¡ Ø§Ù„Ù„Ø¹Ø¨Ø©
def start_game():
    global current_frame
    current_frame = tk.Frame(root)
    current_frame.pack(pady=20)
    
    tk.Label(current_frame, text="â˜ ï¸ Welcome to my Island! â˜ ï¸ğŸï¸", font=("Arial", 16)).pack(pady=10)
    tk.Label(current_frame, text="There are two doors in front of you: ğŸšª Red Door and ğŸšª Blue Door!", font=("Arial", 12)).pack(pady=10)
    
    tk.Button(current_frame, text="Open Red Door", command=lambda: choose_door("red"), bg="red", fg="white", font=("Arial", 12)).pack(side=tk.LEFT, padx=10)
    tk.Button(current_frame, text="Open Blue Door", command=lambda: choose_door("blue"), bg="blue", fg="white", font=("Arial", 12)).pack(side=tk.RIGHT, padx=10)

# Ø¯Ø§Ù„Ø© Ù„Ø§Ø®ØªÙŠØ§Ø± Ø§Ù„Ø¨Ø§Ø¨
def choose_door(door_choice):
    global current_frame
    current_frame.destroy()
    current_frame = tk.Frame(root)
    current_frame.pack(pady=20)
    
    if door_choice == "blue":
        tk.Label(current_frame, text="ğŸšªğŸŠğŸŠğŸŠ You chose the crocodile door! Game Over!", font=("Arial", 14), fg="red").pack(pady=10)
        tk.Button(current_frame, text="Play Again", command=restart_game, bg="green", fg="white").pack(pady=10)
    elif door_choice == "red":
        tk.Label(current_frame, text="Great! You entered the room.", font=("Arial", 14)).pack(pady=10)
        tk.Label(current_frame, text="You found three boxes: ğŸ White, ğŸ Black, ğŸ Green", font=("Arial", 12)).pack(pady=10)
        
        tk.Button(current_frame, text="Open White Box", command=lambda: choose_box("white"), bg="white", fg="black", font=("Arial", 12)).pack(side=tk.LEFT, padx=5)
        tk.Button(current_frame, text="Open Black Box", command=lambda: choose_box("black"), bg="black", fg="white", font=("Arial", 12)).pack(side=tk.LEFT, padx=5)
        tk.Button(current_frame, text="Open Green Box", command=lambda: choose_box("green"), bg="green", fg="black", font=("Arial", 12)).pack(side=tk.LEFT, padx=5)

# Ø¯Ø§Ù„Ø© Ù„Ø§Ø®ØªÙŠØ§Ø± Ø§Ù„ØµÙ†Ø¯ÙˆÙ‚
def choose_box(box_choice):
    global current_frame
    current_frame.destroy()
    current_frame = tk.Frame(root)
    current_frame.pack(pady=20)
    
    if box_choice == "white":
        tk.Label(current_frame, text="Oops! You opened a box filled with snakes! ğŸğŸğŸ Game Over!", font=("Arial", 14), fg="red").pack(pady=10)
    elif box_choice == "black":
        tk.Label(current_frame, text="Oops! You opened a box filled with spiders! ğŸ•·ï¸ğŸ•·ï¸ğŸ•·ï¸ Game Over!", font=("Arial", 14), fg="red").pack(pady=10)
    elif box_choice == "green":
        tk.Label(current_frame, text="Congratulations! You found the treasure! ğŸ†ğŸ†ğŸ† You Win!", font=("Arial", 14), fg="green").pack(pady=10)
    else:
        tk.Label(current_frame, text="Invalid choice! ğŸ¤·â€â™€ï¸ğŸ¤·â€â™€ï¸ğŸ¤·â€â™€ï¸", font=("Arial", 14), fg="orange").pack(pady=10)
    
    tk.Button(current_frame, text="Play Again", command=restart_game, bg="green", fg="white").pack(pady=10)

# Ø¥Ù†Ø´Ø§Ø¡ Ø§Ù„Ù†Ø§ÙØ°Ø© Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠØ©
root = tk.Tk()
root.title("Island Adventure Game")
root.geometry("500x300")
current_frame = None

# Ø¨Ø¯Ø¡ Ø§Ù„Ù„Ø¹Ø¨Ø©
start_game()

# ØªØ´ØºÙŠÙ„ Ø§Ù„Ø­Ù„Ù‚Ø© Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠØ©
root.mainloop()
