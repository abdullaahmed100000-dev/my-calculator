# Ù…ØªØºÙŠØ±Ø§Øª Ø¹Ø§Ù…Ø©
current_frame = None
attempts = 0  # Ø¹Ø¯Ø§Ø¯ Ø§Ù„Ù…Ø­Ø§ÙˆÙ„Ø§Øª
